{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Continuum Command Protocol",
  "description": "Schema for available commands in the Continuum AI system",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Command protocol version",
      "const": "1.0"
    },
    "categories": {
      "type": "object",
      "properties": {
        "ui_interaction": {
          "type": "object",
          "description": "Commands for interacting with the Continuum UI",
          "properties": {
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": [
                      "toggle_agent_drawer",
                      "open_agent_drawer", 
                      "close_agent_drawer",
                      "select_agent",
                      "switch_room",
                      "take_screenshot",
                      "send_to_academy"
                    ]
                  },
                  "description": {
                    "type": "string"
                  },
                  "usage": {
                    "type": "string"
                  },
                  "parameters": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": ["string", "number", "boolean"]
                        },
                        "required": {
                          "type": "boolean"
                        },
                        "description": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "examples": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "system_operations": {
          "type": "object",
          "description": "System-level commands",
          "properties": {
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": [
                      "get_status",
                      "list_agents", 
                      "get_academy_status",
                      "start_training",
                      "get_version"
                    ]
                  },
                  "description": {
                    "type": "string"
                  },
                  "endpoint": {
                    "type": "string"
                  },
                  "method": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "DELETE"]
                  },
                  "examples": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "shell_execution": {
          "type": "object", 
          "description": "Shell command execution",
          "properties": {
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": [
                      "exec",
                      "file_read",
                      "file_write",
                      "webfetch"
                    ]
                  },
                  "format": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "examples": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "connection_info": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "Base URL for Continuum interface"
        },
        "port": {
          "type": "number",
          "description": "Default port number"
        },
        "websocket_url": {
          "type": "string",
          "description": "WebSocket endpoint for real-time communication"
        }
      }
    }
  },
  "unified_api": {
    "description": "All agent requests go through one endpoint",
    "endpoint": "/ask",
    "method": "GET",
    "parameter": "task",
    "format": "curl 'http://localhost:9000/ask?task=your_command_here'"
  },
  "example_commands": {
    "ui_interaction": [
      "curl 'http://localhost:9000/ask?task=open the cyberpunk agent drawer'",
      "curl 'http://localhost:9000/ask?task=take a screenshot of current interface'",
      "curl 'http://localhost:9000/ask?task=select agent PlannerAI'", 
      "curl 'http://localhost:9000/ask?task=switch to academy room'",
      "curl 'http://localhost:9000/ask?task=send CodeAI to academy training'"
    ],
    "system_operations": [
      "curl 'http://localhost:9000/ask?task=show me system status'",
      "curl 'http://localhost:9000/ask?task=list all available agents'",
      "curl 'http://localhost:9000/ask?task=check academy training status'"
    ],
    "shell_execution": [
      "curl 'http://localhost:9000/ask?task=execute date command'",
      "curl 'http://localhost:9000/ask?task=fetch weather from wttr.in'",
      "curl 'http://localhost:9000/ask?task=read package.json file'"
    ]
  }
}