{
  "name": "connection-manager-daemon",
  "version": "1.0.0",
  "description": "ProcessBasedDaemon for WebSocket connection lifecycle management",
  "main": "ConnectionManagerDaemon.ts",
  "type": "module",
  "continuum": {
    "type": "daemon",
    "core": "connection-manager",
    "category": "Network",
    "capabilities": [
      "connection-lifecycle",
      "session-mapping",
      "connection-tracking",
      "event-emission",
      "queue-processing"
    ],
    "actions": ["register", "unregister", "map_session", "unmap_session", "list", "send_to_connection", "check_connection"],
    "exports": {
      "ConnectionManagerDaemon": "./ConnectionManagerDaemon.ts",
      "ConnectionManagerClient": "./ConnectionManagerClient.ts",
      "ConnectionMessageTypes": "./ConnectionMessageTypes.ts"
    },
    "dependencies": [
      "ProcessBasedDaemon",
      "AsyncQueue",
      "WebSocketManager"
    ],
    "interfaces": ["ConnectionManagerInterface"],
    "permissions": [
      "websocket-management",
      "session-mapping",
      "event-emission"
    ]
  },
  "keywords": [
    "connection-manager",
    "daemon",
    "websocket",
    "lifecycle",
    "continuum"
  ],
  "author": "Continuum AI Platform",
  "license": "MIT",
  "scripts": {
    "test": "npx tsx --test tests/",
    "test:unit": "npx tsx --test tests/unit/",
    "test:integration": "npx tsx --test tests/integration/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}