#!/usr/bin/env node
/**
 * Continuum CLI - Simple wrapper around the Continuum OS
 * Auto-healing system via import
 */

import Continuum from './src/core/Continuum.ts';

async function main() {
  const continuum = new Continuum();
  
  // Auto-healing connection - will start system if needed
  await continuum.connect();
  
  // Keep alive for CLI usage
  continuum.keepAlive();
}

// Execute if run directly
if (import.meta.url === `file://${process.argv[1]}`) {
  main().catch(error => {
    console.error('‚ùå Continuum failed:', error);
    process.exit(1);
  });
}

// Export for import usage (auto-healing on import)
export default async function() {
  const continuum = new Continuum();
  await continuum.connect(); // Auto-heal
  return continuum;
}