{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist/ui",
    "rootDir": "./src/ui",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false
  },
  "include": [
    "src/ui/**/*.ts"
  ],
  "exclude": [
    "src/ui/**/*.test.ts",
    "src/ui/widgets/chat/*.ts",
    "src/ui/UIManager.ts",
    "node_modules",
    "dist"
  ]
}