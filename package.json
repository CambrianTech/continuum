{
  "name": "continuum",
  "version": "0.2.1973",
  "description": "Designed by AI and humans for AI and humans - A standard protocol for configuring AI assistants to work consistently with codebases",
  "main": "src/core/continuum-core.cjs",
  "bin": {
    "continuum": "./continuum.cjs"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "node check-imports.cjs && jest",
    "test:unit": "jest __tests__/unit --config jest.config.test.js --verbose",
    "test:integration": "jest __tests__/integration --config jest.config.test.js --verbose",
    "test:ai": "jest __tests__/integration/AICapabilities.test.js --config jest.config.test.js --verbose",
    "test:groups": "jest __tests__/integration/GroupChat.test.js --config jest.config.test.js --verbose",
    "test:ui": "jest --config jest.config.ui.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run version:bump && npm run lint && node check-imports.cjs && npm run test",
    "build:ui": "tsc --project tsconfig.ui.json",
    "lint": "eslint . --ext .ts,.js --config eslint.config.js",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "postinstall": "lerna run prepare",
    "ci": "./scripts/test-ci.sh",
    "validate-schema": "node scripts/validate-schema.js",
    "check-deps": "npm audit --production && npm outdated",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "publish:dev": "lerna publish --dist-tag dev --no-push --no-git-tag-version",
    "build:packages": "npm run build --workspaces",
    "test:packages": "npm run test --workspaces",
    "lint:packages": "npm run lint --workspaces",
    "demo": "npx ts-node demo-complete-system.ts",
    "test-system": "npx jest tests/integration-full-system.test.ts",
    "version:bump": "npm version patch --no-git-tag-version"
  },
  "keywords": [
    "ai",
    "configuration",
    "protocol",
    "assistant",
    "claude",
    "gpt",
    "gemini",
    "llama",
    "mistral",
    "meta",
    "anthropic",
    "openai",
    "google",
    "copilot",
    "standardization",
    "cognitive-systems",
    "contextual",
    "devops",
    "devsecops"
  ],
  "author": "Cambrian Technologies",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "babel-jest": "^30.0.0-beta.3",
    "eslint": "^9.24.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.2.1",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "ajv": "^8.17.1",
    "dotenv": "^16.5.0",
    "glob": "^11.0.1",
    "inquirer": "^12.5.2",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1",
    "openai": "^5.0.1",
    "punycode": "^2.3.1",
    "systray": "^1.0.5",
    "ws": "^8.18.2",
    "yaml": "^2.7.1"
  }
}
