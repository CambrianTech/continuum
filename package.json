{
  "name": "continuum",
  "version": "0.1.0",
  "description": "DevOps for Cognitive Systems - A standard protocol for configuring AI assistants to work consistently with codebases",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "lerna run build",
    "lint": "eslint . --ext .ts,.js --max-warnings=0",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "postinstall": "lerna run prepare",
    "ci": "./scripts/test-ci.sh",
    "validate-schema": "npx ajv-cli validate -s schema/ai-config.schema.json -d \"templates/*/config.json\"",
    "check-deps": "npm audit --production && npm outdated"
  },
  "keywords": [
    "ai",
    "configuration",
    "protocol",
    "assistant",
    "claude",
    "gpt",
    "standardization",
    "cognitive-systems",
    "ai-config",
    "devops"
  ],
  "author": "Cambrian Technologies",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "ajv-cli": "^5.0.0",
    "eslint": "^9.24.0",
    "jest": "^29.5.0",
    "lerna": "^8.2.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
