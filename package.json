{
  "name": "continuum",
  "version": "0.1.0",
  "description": "DevOps for Cognitive Systems - A standard protocol for configuring AI assistants to work consistently with codebases",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "lerna run build",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "postinstall": "lerna bootstrap",
    "ci": "./scripts/test-ci.sh",
    "validate-schema": "ajv-cli validate -s schema/ai-config.schema.json -d \"templates/*/config.json\"",
    "check-deps": "npm audit --production && npm outdated"
  },
  "keywords": [
    "ai",
    "configuration",
    "protocol",
    "assistant",
    "claude",
    "gpt",
    "standardization",
    "cognitive-systems",
    "ai-config",
    "devops"
  ],
  "author": "Cambrian Technologies",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}