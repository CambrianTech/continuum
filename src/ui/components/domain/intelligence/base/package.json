{
  "name": "intelligence-widget-base",
  "version": "1.0.0",
  "description": "Layer 2 Intelligence Domain - Base class for AI, Academy, and persona-related widgets",
  "main": "IntelligenceWidget.ts",
  "type": "module",
  "layer": 2,
  "domain": "intelligence",
  "dependencies": {
    "base-widget": "file:../../../core/base-widget",
    "data-display-widget": "file:../../../core/data-display"
  },
  "architecture": {
    "layer_description": "AI and intelligence domain base functionality",
    "depends_on": ["Layer 1 core widgets only"],
    "provides": [
      "IntelligenceWidget - Base for all AI-related widgets",
      "AI status and metrics display patterns",
      "Training progress visualization",
      "Persona management interfaces",
      "Vector space visualization patterns"
    ],
    "domain_concepts": [
      "AI personas and their capabilities",
      "Training sessions and progress",
      "Vector space evolution",
      "LoRA layers and optimization",
      "P2P learning networks",
      "Formula Master insights",
      "Adversarial training dynamics"
    ],
    "used_by": [
      "AcademyWidget - AI training visualization",
      "PersonaWidget - Individual AI persona display",
      "TrainingWidget - Active training session monitoring",
      "VectorSpaceWidget - Capability space visualization"
    ]
  },
  "intelligence_interface": {
    "ai_command_types": ["academy-spawn", "academy-train", "academy-status", "persona-query"],
    "metric_types": ["training_progress", "capability_improvement", "vector_movement"],
    "status_types": ["training", "idle", "evolving", "collaborating"],
    "visualization_types": ["progress_bars", "vector_space", "network_graph", "metrics_dashboard"]
  },
  "integration_points": {
    "academy_daemon": "Real-time training status and persona evolution",
    "persona_daemon": "Persona management and capability queries", 
    "database_daemon": "Training history and persona genome storage",
    "formula_master": "Training formula insights and reasoning"
  },
  "testing": {
    "unit_tests": "AI metric display and status handling",
    "integration_tests": "Academy and Persona daemon communication",
    "visualization_tests": "Vector space and progress visualization",
    "real_time_tests": "Training progress updates and persona evolution"
  }
}