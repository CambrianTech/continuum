{
  "name": "navigation-widget-base", 
  "version": "1.0.0",
  "description": "Layer 2 Navigation Domain - Base class for navigation, sidebar, and routing widgets",
  "main": "NavigationWidget.ts",
  "type": "module",
  "layer": 2, 
  "domain": "navigation",
  "dependencies": {
    "base-widget": "file:../../../core/base-widget",
    "data-display-widget": "file:../../../core/data-display"
  },
  "architecture": {
    "layer_description": "Navigation and routing domain base functionality",
    "depends_on": ["Layer 1 core widgets only"],
    "provides": [
      "NavigationWidget - Base for all navigation widgets",
      "Route management and navigation patterns",
      "Sidebar and menu functionality",
      "Breadcrumb and navigation state",
      "Widget organization and layout"
