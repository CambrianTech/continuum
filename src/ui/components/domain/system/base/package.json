{
  "name": "system-widget-base",
  "version": "1.0.0", 
  "description": "Layer 2 System Domain - Base class for system status, version, and monitoring widgets",
  "main": "SystemWidget.ts",
  "type": "module",
  "layer": 2,
  "domain": "system",
  "dependencies": {
    "base-widget": "file:../../../core/base-widget",
    "data-display-widget": "file:../../../core/data-display"
  },
  "architecture": {
    "layer_description": "System monitoring and status domain base functionality", 
    "depends_on": ["Layer 1 core widgets only"],
    "provides": [
      "SystemWidget - Base for all system-related widgets",
      "System status and health monitoring",
      "Version and update information",
      "Performance metrics display",
      "Log and diagnostic interfaces"
    ],
    "domain_concepts": [
      "System health and status",
      "Version information and updates",
      "Performance monitoring",
      "Daemon process status",
      "Error logs and diagnostics",
      "Resource utilization",
      "Network connectivity status"
    ],
    "used_by": [
      "VersionWidget - System version display",
      "HealthWidget - System health monitoring", 
      "LogWidget - System logs and diagnostics",
      "PerformanceWidget - Resource utilization",
      "DaemonStatusWidget - Daemon process monitoring"
    ]
  },
  "system_interface": {
    "status_types": ["healthy", "warning", "error", "unknown"],
    "metric_types": ["cpu_usage", "memory_usage", "disk_usage", "network_latency"],
    "log_levels": ["debug", "info", "warn", "error", "fatal"],
    "daemon_states": ["running", "stopped", "starting", "stopping", "error"]
  },
  "integration_points": {
    "health_command": "System health status and daemon monitoring",
    "version_command": "Version information and update status",
    "log_system": "Application logs and diagnostic information",
    "daemon_monitoring": "Real-time daemon process status",
    "performance_metrics": "System resource utilization monitoring"
  },
  "testing": {
    "unit_tests": "System status display and metric formatting",
    "integration_tests": "Health and version command integration",
    "monitoring_tests": "Real-time status updates and daemon monitoring",
    "diagnostic_tests": "Log display and error handling"
  }
}