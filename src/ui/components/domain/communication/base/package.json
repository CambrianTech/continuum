    "websocket_events": "Real-time message delivery and status updates"
  },
  "testing": {
    "unit_tests": "Message handling and display logic",
    "integration_tests": "Communication with command system and WebSocket",
    "real_time_tests": "Message delivery and presence updates"
  }
