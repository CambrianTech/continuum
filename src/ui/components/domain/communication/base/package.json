{
  "name": "communication-widget-base",
  "version": "1.0.0",
  "description": "Layer 2 Communication Domain - Base class for chat, messaging, and communication widgets",
  "main": "CommunicationWidget.ts",
  "type": "module", 
  "layer": 2,
  "domain": "communication",
  "dependencies": {
    "base-widget": "file:../../../core/base-widget",
    "data-display-widget": "file:../../../core/data-display"
