{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "downlevelIteration": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@commands/*": ["commands/*"],
      "@daemons/*": ["daemons/*"],
      "@system/*": ["system/*"],
      "@widgets/*": ["widgets/*"],
      "@shared/*": ["shared/*"],
      "@types/*": ["types/*"],
      "@browser/*": ["browser/*"],
      "@server/*": ["server/*"],
      "@generator/*": ["generator/*"],
      "@commands-utilities/*": ["commands/utilities/*"],
      "@commands-workspace/*": ["commands/workspace/*"],
      "@commands-interface/*": ["commands/interface/*"],
      "@commands-collaboration/*": ["commands/collaboration/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": [
    "index.ts",
    "browser-index.ts",
    "server-index.ts",
    "browser/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "daemons/**/*.ts",
    "commands/**/*.ts",
    "widgets/**/*.ts",
    "tests/workers/**/*.ts",
    "test-path-aliases.ts",
    "test-path-aliases-runtime.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples/test-bench/**/*",
    "examples/widget-ui/**/*", 
    "examples/auto-discovery-demo.ts",
    "tests/**/*",
    "mcp/**/*",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.bak",
    "**/*.bak/**/*",
    "**/templates/**/*",
    "scripts/auto-test-suite.ts",
    "scripts/automated-performance-monitoring.ts", 
    "scripts/autonomous-dev-toolkit.ts",
    "scripts/build-browser-example.js",
    "scripts/capture-all-themes.ts",
    "scripts/comprehensive-test-runner.ts",
    "scripts/debug-correlation.ts",
    "scripts/diagnostic-*.ts",
    "scripts/generate-test-report.ts",
    "scripts/get-active-example-logs.ts",
    "scripts/intelligent-test-runner.ts",
    "scripts/log-dashboard.ts",
    "scripts/performance-monitor.ts",
    "scripts/register-classified-tests.ts",
    "scripts/screenshot.ts",
    "scripts/switch-example.ts",
    "scripts/test-*.ts",
    "utils/AggressiveHangBreaker.ts",
    "utils/DiagnosticsLogger.ts",
    "utils/HangingTestDetector.ts", 
    "utils/ImmediateHangKiller.ts",
    "utils/TestAutoSpawn.ts"
  ]
}
