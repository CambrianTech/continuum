{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"],
      "@browser/*": ["browser/*"],
      "@server/*": ["server/*"],
      "@transports/*": ["transports/*"],
      
      "@daemonsRoot/*": ["daemons/*"],
      "@commandDaemon/*": ["daemons/command-daemon/*"],
      "@consoleDaemon/*": ["daemons/console-daemon/*"],
      "@healthDaemon/*": ["daemons/health-daemon/*"],
      "@sessionDaemon/*": ["daemons/session-daemon/*"],
      
      "@commandsRoot/*": ["commands/*"],
      "@commandBase": ["daemons/command-daemon/shared/CommandBase"],
      "@commandShared/*": ["daemons/command-daemon/shared/*"],
      
      "@chatRoot/*": ["commands/chat/*"],
      "@chatShared/*": ["commands/chat/shared/*"],
      "@chatBrowser/*": ["commands/chat/browser/*"],
      "@chatServer/*": ["commands/chat/server/*"],
      
      "@fileRoot/*": ["commands/file/*"],
      "@fileShared/*": ["commands/file/shared/*"],
      "@fileBrowser/*": ["commands/file/browser/*"],
      "@fileServer/*": ["commands/file/server/*"],
      
      "@fileAppendShared/*": ["commands/file/append/shared/*"],
      "@fileLoadShared/*": ["commands/file/load/shared/*"],
      "@fileSaveShared/*": ["commands/file/save/shared/*"],
      
      "@clickShared/*": ["commands/click/shared/*"],
      "@screenshotShared/*": ["commands/screenshot/shared/*"],
      "@navigateShared/*": ["commands/navigate/shared/*"],
      "@scrollShared/*": ["commands/scroll/shared/*"],
      "@getTextShared/*": ["commands/get-text/shared/*"],
      "@waitForElementShared/*": ["commands/wait-for-element/shared/*"],
      "@typeShared/*": ["commands/type/shared/*"],
      "@compileTypescriptShared/*": ["commands/compile-typescript/shared/*"],
      
      "@consoleShared/*": ["daemons/console-daemon/shared/*"],
      "@healthShared/*": ["daemons/health-daemon/shared/*"],
      "@sessionShared/*": ["daemons/session-daemon/shared/*"],
      
      "@sharedRouting/*": ["shared/routing/*"],
      "@sharedQueuing/*": ["shared/queuing/*"], 
      "@sharedEvents/*": ["shared/events/*"],
      "@testsShared/*": ["tests/shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": [
    "index.ts",
    "browser/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "daemons/**/*.ts",
    "commands/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples/**/*",
    "tests/**/*",
    "mcp/**/*",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.bak",
    "**/*.bak/**/*"
  ]
}