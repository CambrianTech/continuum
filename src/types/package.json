{
  "name": "continuum-types",
  "version": "1.0.0",
  "description": "Core TypeScript types, interfaces, and validation logic for Continuum modules",
  "main": "index.ts",
  "type": "module",
  "continuum": {
    "module": "types",
    "category": "Core",
    "capabilities": [
      "type-definitions",
      "validation",
      "module-framework"
    ],
    "dependencies": [],
    "interfaces": [
      "ValidationInterface",
      "ModuleInterface"
    ],
    "permissions": [
      "read"
    ],
    "config": {
      "validModuleTypes": [
        "command",
        "daemon", 
        "widget",
        "module",
        "core"
      ],
      "validationRules": {
        "requiredFields": ["category", "capabilities"],
        "optionalFields": ["dependencies", "interfaces", "permissions"]
      }
    }
  },
  "keywords": [
    "types",
    "validation",
    "continuum",
    "typescript"
  ],
  "author": "Continuum AI Platform",
  "license": "MIT",
  "scripts": {
    "test": "npx tsx test/",
    "test:unit": "npx tsx test/unit/",
    "test:integration": "npx tsx test/integration/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}