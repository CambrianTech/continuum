{
  "name": "@continuum/renderer-daemon",
  "version": "1.0.0",
  "description": "Renderer daemon that can switch between legacy and modern UI systems",
  "main": "index.server.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "dev": "tsx watch RendererDaemon.ts",
    "build": "tsc"
  },
  "continuum": {
    "daemon": "renderer",
    "category": "Core", 
    "capabilities": ["ui-rendering", "template-management", "hot-reloading"],
    "dependencies": [],
    "interfaces": ["daemon-protocol", "ui-rendering", "template-engine"],
    "permissions": ["read", "http-server"],
    "startupOrder": 200,
    "healthCheck": {
      "enabled": true,
      "intervalMs": 30000,
      "timeoutMs": 5000
    }
  }
}