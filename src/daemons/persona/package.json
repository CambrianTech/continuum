{
  "name": "@continuum/persona-daemon",
  "version": "1.0.0",
  "description": "Universal Session Framework for AI Personas - enables personas to use same commands as humans with LoRA adaptation",
  "main": "PersonaDaemon.ts",
  "type": "module",
  "scripts": {
    "test": "jest"
  },
  "keywords": [
    "continuum", 
    "persona", 
    "lora", 
    "academy", 
    "session", 
    "ai",
    "adversarial-training",
    "universal-interface"
  ],
  "continuum": {
    "daemon": "persona",
    "category": "Core",
    "capabilities": [
      "session-management",
      "artifact-management", 
      "daemon-communication",
      "process-coordination"
    ],
    "dependencies": ["command-processor"],
    "interfaces": ["daemon-protocol", "session-management", "command-bus"],
    "permissions": ["session-management", "daemon-communication", "network-access"],
    "startupOrder": 300,
    "healthCheck": {
      "enabled": true,
      "intervalMs": 30000,
      "timeoutMs": 5000
    }
  }
}