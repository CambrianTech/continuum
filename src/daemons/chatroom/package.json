{
  "name": "chatroom-daemon",
  "version": "1.0.0",
  "description": "ChatRoom Daemon for Continuum - Chat and room management",
  "main": "ChatRoomDaemon.ts",
  "type": "module",
  "continuum": {
    "daemon": "chatroom",
    "category": "Communication",
    "capabilities": [
      "chat-management",
      "room-creation",
      "message-routing"
    ],
    "dependencies": ["database", "session-manager"],
    "interfaces": ["WebSocket", "EventBus"],
    "permissions": ["network", "storage"]
  },
  "keywords": [
    "chatroom",
    "daemon",
    "continuum",
    "communication"
  ],
  "author": "Continuum AI Platform",
  "license": "MIT",
  "scripts": {
    "test": "npx tsx test/",
    "test:unit": "npx tsx test/unit/",
    "test:integration": "npx tsx test/integration/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}