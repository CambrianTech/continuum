{
  "issue_transitions": {
    "test_failure": {
      "on_failure": {
        "action": "create_or_update",
        "labels": ["bug", "ci-failure", "needs-attention"],
        "priority": "high",
        "assign_to": "last_committer"
      },
      "on_success": {
        "action": "close_if_exists",
        "comment": "âœ… Tests now passing - auto-closing"
      }
    },
    "investigation": {
      "on_commit_reference": {
        "action": "add_comment",
        "template": "commit_reference.md"
      }
    },
    "enhancement": {
      "on_implementation": {
        "action": "close",
        "comment": "ðŸŽ¯ Enhancement implemented in commit {commit_sha}"
      }
    }
  },
  "automated_checks": {
    "pre_commit": [
      "run_tests",
      "analyze_commit", 
      "scan_files_md"
    ],
    "post_commit": [
      "update_issue_status",
      "create_failure_issues",
      "close_resolved_issues"
    ],
    "pr_checks": [
      "full_test_suite",
      "dependency_analysis",
      "issue_impact_analysis"
    ]
  },
  "notification_rules": {
    "test_failures": {
      "notify": ["last_committer", "assigned_agents"],
      "urgency": "high",
      "channels": ["github_comments", "dashboard"]
    },
    "issue_auto_close": {
      "notify": ["issue_creator", "assigned_agents"],
      "urgency": "low",
      "channels": ["github_comments"]
    }
  },
  "integration_points": {
    "commands": {
      "tests": "Run comprehensive test suite",
      "issues": "Create/update/close issues based on results",
      "docs": "Update documentation and FILES.md",
      "screenshot": "Capture verification screenshots"
    },
    "external_apis": {
      "github": "Issue creation, updates, PR comments",
      "git": "Commit analysis, branch information"
    }
  }
}