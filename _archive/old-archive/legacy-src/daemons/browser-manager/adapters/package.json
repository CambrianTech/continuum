{
  "name": "@continuum/browser-adapters",
  "version": "1.0.0",
  "description": "Modular browser automation adapters for Continuum",
  "type": "module",
  "continuum": {
    "type": "adapter-framework",
    "category": "browser-management",
    "capabilities": [
      "cross-platform-automation",
      "modular-architecture", 
      "browser-abstraction",
      "os-abstraction"
    ],
    "platforms": [
      "darwin",
      "linux", 
      "win32"
    ],
    "browsers": [
      "chromium-based",
      "webkit-based"
    ],
    "dependencies": [
      "continuum-daemon-base"
    ],
    "interfaces": [
      "browser-adapter",
      "os-adapter"
    ],
    "permissions": [
      "execute",
      "read-scripts",
      "system-automation"
    ]
  },
  "exports": {
    "./base/*": "./base/*.js",
    "./os/*": "./os/*.js", 
    "./browser/*": "./browser/*.js",
    "./*": "./*.js"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npx tsx --test test/unit/**/*.test.ts",
    "test:integration": "npx tsx --test test/integration/**/*.test.ts"
  }
}