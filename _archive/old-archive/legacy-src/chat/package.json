{
  "name": "@continuum/chat",
  "version": "1.0.0",
  "description": "Universal chat system with ChatParticipant foundation",
  "type": "module",
  "continuum": {
    "type": "module",
    "category": "communication",
    "capabilities": [
      "chat_messaging",
      "room_management", 
      "participant_tracking",
      "command_integration",
      "real_time_communication"
    ],
    "dependencies": [
      "@continuum/academy"
    ],
    "interfaces": [
      "ChatParticipant",
      "BaseChat",
      "ChatClient",
      "ChatServer"
    ],
    "permissions": [
      "websocket",
      "database",
      "daemon_communication"
    ]
  },
  "main": "shared/index.ts",
  "exports": {
    ".": "./shared/index.ts",
    "./shared": "./shared/index.ts",
    "./client": "./client/index.ts",
    "./server": "./server/index.ts"
  },
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run --testPathPattern=test/unit",
    "test:integration": "vitest run --testPathPattern=test/integration",
    "build": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@continuum/academy": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}